{
  "name": "makehuman.js",
  "version": "0.0.1",
  "description": "An experimental Makehuman port to Typescript, aiming for better UX, Clean Code and TDD",
  "author": "Mark-Andr√© Hopf <mhopf@mark13.org> based on work of the MakeHuman Team (www.makehumancommunity.org)",
  "license": "AGPL-3.0-or-later",
  "type": "module",
  "engines": {
    "npm": ">=8.1.2",
    "node": ">=16.10.0"
  },
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markandre13/makehuman.js.git"
  },
  "scripts": {
    "build": "npm run build:data && npm run build:once",
    "build:once": "rollup --config rollup.config.js",
    "build:data": "tsc --outDir dist/filesystem src/filesystem/build-directory-files.ts && mv -f dist/filesystem/build-directory-files.js dist/filesystem/build-directory-files.cjs && node dist/filesystem/build-directory-files.cjs",
    "build:watch": "rollup --config rollup.config.js --watch",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "build:client": "rollup --config rollup-client.config.js",
    "dev:build": "ttsc -w -p tsconfig.dev.json",
    "dev:test": "if test -z \"$npm_config_file\" ; then wtr --watch 'build/test/**/*.spec.js' ; else wtr --watch $npm_config_file; fi",
    "dev:serve": "wds --node-resolve --watch --open --app-index index.dev.html",
    "update": "npx npm-check-updates -u && npm install"
  },
  "dependencies": {
    "toad.js": "0.0.24",
    "toad.jsx": "^0.0.3"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/chai": "^4.3.0",
    "@types/chai-string": "^1.4.2",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@web/dev-server": "^0.1.30",
    "@web/test-runner": "^0.13.27",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "@zoltu/typescript-transformer-append-js-extension": "^1.0.1",
    "chai": "^4.3.6",
    "chai-string": "^1.5.0",
    "eslint": "^8.12.0",
    "gl-matrix": "^3.4.3",
    "mocha": "^9.2.2",
    "rollup": "^2.70.1",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-node": "^10.7.0",
    "ttypescript": "^1.5.13",
    "typescript": "^4.6.3"
  }
}
