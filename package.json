{
  "name": "makehuman.js",
  "version": "0.0.1",
  "description": "An experimental Makehuman port to Typescript/Web/Electron, aiming for better UX, Clean Code and TDD",
  "scripts": {
    "build": "tsc --outDir dist src/main.ts src/preload.ts && webpack",
    "build:watch": "tsc --outDir dist src/main.ts src/preload.ts && webpack --watch",
    "lint": "eslint -c tslint.json -p tsconfig.json",
    "makedir": "tsc --outDir dist src/makedir.ts && node dist/makedir.js",
    "start": "npm run build && electron ./dist/main.js",
    "test": "mocha -r ts-node/register -r test/bootstrap.ts 'test/**/*.spec.ts'",
    "update": "npx npm-check-updates -u && npm install"
  },
  "author": "Mark-Andr√© Hopf <mhopf@mark13.org> based on work of the MakeHuman Team (www.makehumancommunity.org)",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "electron": "^13.0.1",
    "toad.js": "0.0.11"
  },
  "devDependencies": {
    "@electron/remote": "^1.1.0",
    "@types/chai": "^4.2.18",
    "@types/chai-string": "^1.4.2",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.6.1",
    "chai": "^4.3.4",
    "chai-string": "^1.5.0",
    "eslint": "^7.27.0",
    "gl-matrix": "^3.3.0",
    "mocha": "^8.4.0",
    "ts-loader": "^9.2.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  }
}
